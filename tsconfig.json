{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@icons/*": ["src/assets/icons/*"],
			"@components/*": ["src/components/*"],
			"@constants/*": ["src/constants/*"],
			"@cv/*": ["./src/data/cv/*"],
			"@entities/*": ["src/entities/*"],
			"@i18n/*": ["src/i18n/*"],
			"@layouts/*": ["src/layouts/*"],
			"@locales/*": ["src/locales/*"],
			"@sections/*": ["src/sections/*"],
			"@styles/*": ["src/styles/*"],
			"@definitions/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"]
		}
	}
}
