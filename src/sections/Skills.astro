---
import { skills } from "@cv";
import Section from "@/components/Section.astro";
---

<Section title="Habilidades">
	<ul class="flex flex-wrap gap-2">
		{
			skills.map((skill) => (
				<li class="rounded-sm bg-neutral-900 px-2 py-1.5 text-center text-sm leading-none font-semibold text-neutral-50 opacity-85">
					{skill}
				</li>
			))
		}
	</ul>
</Section>
