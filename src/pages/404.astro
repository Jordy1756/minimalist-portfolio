---
import Layout from "@layouts/Layout.astro";
import resume from "@cv/en.json";

const { basics } = resume;
---

<Layout title="404" locale={"en"} basics={basics}>
	<main class="flex-1 flex flex-col items-center justify-center gap-4">
		<h1 class="text-center text-4xl font-bold">404 - Page Not Found</h1>
		<p class="text-center text-lg">Sorry, the page you are looking for does not exist.</p>
		<a href="/">Go to Home</a>
	</main>
</Layout>
