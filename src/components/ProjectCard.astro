---
import type { Project } from "@entities/project";
import { getTranslations } from "@i18n/index";
import GithubIcon from "@icons/GithubIcon.astro";

interface Props {
	project: Project;
}

const { project } = Astro.props;
const { name, description, highlights, url, github } = project;

const t = getTranslations();
---

<article class="flex flex-col gap-1 rounded-lg border border-neutral-200 p-4">
	<header class="flex items-center justify-between">
		<h3 class="flex text-lg font-bold text-neutral-800">
			{
				url ? (
					<a
						href={url}
						target="_blank"
						rel="noopener noreferrer"
						class="flex items-center gap-2 hover:underline"
					>
						{name}
					</a>
				) : (
					name
				)
			}
		</h3>
		<a href={github} target="_blank" rel="noopener noreferrer">
			<GithubIcon
				width={20}
				height={20}
				class="flex items-center gap-2 text-neutral-700 transition-colors hover:text-neutral-900"
			/>
		</a>
	</header>
	<main class="mb-4 flex flex-1 flex-col gap-2">
		<p class="text-sm">{description}</p>
	</main>
	<footer>
		<ul class="flex flex-wrap gap-2 text-xs font-bold text-neutral-700">
			{
				highlights.map((highlight, index) => (
					<li class="flex gap-2">
						{index > 0 && <span>Â·</span>}
						<span>{highlight}</span>
					</li>
				))
			}
		</ul>
	</footer>
</article>
