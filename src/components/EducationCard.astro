---
type Props = {
	institution: string;
	startDate: string;
	endDate: string | null;
	area: string;
};

const { institution, startDate, endDate, area } = Astro.props;

const startYear = new Date(startDate).getFullYear();
const endYear = endDate !== null ? new Date(endDate).getFullYear() : "Actual";
---

<article>
	<header>
		<header class="flex justify-between gap-2">
			<div class="flex flex-col">
				<h3 class="text-lg font-semibold">{institution}</h3>
			</div>
			<div class="text-neutral-500 text-sm font-medium">
				<time datetime={startDate}>{startYear}</time>
				<span>-</span>
				<time datetime={endDate}>{endYear}</time>
			</div>
		</header>
	</header>
	<main>
		<p>{area}</p>
	</main>
</article>
