---
import type { Education } from "@entities/education";
import { getTranslations } from "@i18n/index";

interface Props {
	education: Education;
}

const { education } = Astro.props;
const { institution, startDate, endDate, area } = education;

const t = getTranslations();
const presentLabel = t.common.presentLabel;
const startYear = new Date(startDate).getFullYear();
const endYear = endDate !== null ? new Date(endDate).getFullYear() : presentLabel;
---

<article>
	<header>
		<header class="flex justify-between gap-2">
			<div class="flex flex-col">
				<h3 class="text-lg font-semibold">{institution}</h3>
			</div>
			<div class="text-right text-sm font-medium text-neutral-500">
				<time datetime={startDate + ""}>{startYear}</time>
				<span>-</span>
				<time datetime={endDate + ""}>{endYear}</time>
			</div>
		</header>
	</header>
	<main>
		<p>{area}</p>
	</main>
</article>
